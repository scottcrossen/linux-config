# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "volume main"
order += "load"
order += "ethernet ###ETHERNET_INTERFACE###"
order += "wireless ###WIFI_INTERFACE###"
order += "battery 0"
order += "tztime utc"
order += "tztime local"

ethernet ###ETHERNET_INTERFACE### {
        format_up = "ETHERNET: %speed"
        format_down = ""
}

wireless ###WIFI_INTERFACE### {
        format_up = "WIFI: %bitrate"
        format_down = ""
}

tztime local {
        format = "%l:%M %m/%d/%Y"
}

load {
        format = "LOAD: %1min"
}

volume main {
	format = "VOLUME: %volume"
	format_muted = "VOLUME: %volume (muted)"
}

tztime utc {
    format = "UTC: %H:%M"
    timezone = "UTC"
}

battery 0 {
    threshold_type = "time"
    integer_battery_capacity = "true"
    low_threshold = "15"
    format = "BATTERY: %percentage"
    format_down = ""
}